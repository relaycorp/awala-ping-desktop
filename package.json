{
  "name": "@relaycorp/awala-ping",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "Awala Ping for Desktop",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/relaycorp/awala-ping-desktop",
  "homepage": "https://docs.relaycorp.tech/awala-ping-desktop/",
  "license": "MIT",
  "keywords": [
    "awala"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s static-checks test:unit",
    "test:unit": "jest --coverage",
    "test:unit:changed": "run-s \"test:unit -- -o\"",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:ci:unit": "run-s build test:ci:unit:jest",
    "test:ci:unit:jest": "jest --config jest.config.ci.js --coverage",
    "test:integration": "jest --config jest.config.integration.js",
    "doc-api": "typedoc src/index.ts --out build/docs/api",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@relaycorp/relaynet-core": "^1.45.1"
  },
  "devDependencies": {
    "@relaycorp/relaynet-testing": "^1.1.5",
    "@relaycorp/shared-config": "^1.4.13",
    "@types/jest": "^26.0.22",
    "del-cli": "^3.0.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^10.0.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "@relaycorp/relaynet-core": ">= 1.43.0 < 2"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public",
    "tag": "dev"
  }
}
